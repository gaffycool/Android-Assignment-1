<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:background="@color/cardview_light_background"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="109dp">

        <ImageView
            android:id="@+id/mPhoto"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtName"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/txtName"
            android:fontFamily="@font/museosans_300"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtEmail"
            android:layout_below="@+id/txtName"
            android:layout_toEndOf="@+id/txtEmail"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mPass"
            android:layout_toEndOf="@+id/txtEmail"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/mAge"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/txtGenger"
            android:layout_toEndOf="@+id/txtAge"
            android:ems="10"
            android:inputType="number"
            android:text="Name"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtGenger"
            android:layout_toStartOf="@+id/mGender"
            android:text="Age"
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtGenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mPass"
            android:layout_toStartOf="@+id/mGender"
            android:text="Gender"
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/mPhoto"
            android:text="Name: "
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtName"
            android:layout_toEndOf="@+id/mPhoto"
            android:text="Email: "
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/mPass"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/txtPass"
            android:layout_toEndOf="@+id/txtPass"
            android:ems="10"
            android:inputType="textPersonName"
            android:singleLine="false"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/txtPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtName"
            android:layout_below="@+id/mEmail"
            android:fontFamily="@font/museosans_300"
            android:text="Password: "
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtGenger"
            android:layout_below="@+id/mAge"
            android:text="Born: "
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/mDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtCountry"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/mAge"
            android:layout_toEndOf="@+id/txtDOB"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtCountry"
            android:layout_below="@+id/mDOB"
            android:layout_toEndOf="@+id/txtCountry"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtDOB"
            android:layout_below="@+id/txtDOB"
            android:text="Country: "
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>